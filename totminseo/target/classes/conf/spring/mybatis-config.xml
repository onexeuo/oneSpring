<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD MyBatis Configuration 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    
    <properties resource="props/db.properties" />
    
    <settings>
        <setting name="jdbcTypeForNull" value="VARCHAR"/>
    </settings>   
    
    <typeAliases>
    	<typeAlias alias="Hotel" type="tot.domain.Hotel"/>
    	<typeAlias alias="Tour" type="tot.domain.Tour"/>
    	<typeAlias alias="Restaurant" type="tot.domain.Restaurant"/>
    </typeAliases>
    
    <mappers>
        <mapper resource="conf/mapper/TendencyTestMapper.xml"/>
        <mapper resource="conf/mapper/PlannerMapper.xml"/>
        <mapper resource="conf/mapper/HotelMapper.xml"/>
        <mapper resource="conf/mapper/Course.xml"/>
        	    <mapper resource="conf/mapper/Trip.xml"/>
	    <mapper resource="conf/mapper/FestivalMapper.xml"/>
    </mappers>
    
</configuration>

    
    

    

    
    